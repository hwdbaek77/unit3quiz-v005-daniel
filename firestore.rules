rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Demo/class rules: allow anyone to read/write vote counts.
    // If you want this more locked down later, we can add auth + rate limiting.
    match /votes/{id} {
      allow read, write: if true;
    }
    // Allow users to read/write their own votes
    match /userVotes/{id} {
      allow read, write: if true;
    }
  }
}


